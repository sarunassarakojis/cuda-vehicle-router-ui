<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.OptionsController">

    <MenuBar>
        <Menu text="File">
            <MenuItem text="Exit" onAction="#exit"/>
        </Menu>
        <Menu text="Options">
            <MenuItem text="Properties"/>
        </Menu>
    </MenuBar>

    <GridPane alignment="CENTER" hgap="10" vgap="10">
        <padding>
            <Insets top="200" bottom="200" right="25" left="25"/>
        </padding>

        <Label text="Server IP:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="serverIp" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Algorithm Type:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <ComboBox fx:id="algorithmType" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <HBox alignment="CENTER_RIGHT" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="2">
            <Button text="Cancel" onAction="#cancel"/>
            <Button text="Save" onAction="#save"/>
        </HBox>

    </GridPane>

</VBox>
