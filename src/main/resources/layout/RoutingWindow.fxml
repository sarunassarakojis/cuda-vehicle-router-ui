<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.vehicle.router.controller.RoutingController" styleClass="root">

    <MenuBar>
        <Menu text="File">
            <MenuItem text="Open CSV..." onAction="#loadCsvFile"/>
            <MenuItem text="Exit" onAction="#exit"/>
        </Menu>
        <Menu text="View">
            <MenuItem text="Toggle Number Axes" onAction="#toggleNumberAxes"/>
        </Menu>
        <Menu text="Options">
            <MenuItem text="Properties" onAction="#openOptions"/>
        </Menu>
    </MenuBar>

    <GridPane alignment="CENTER" hgap="10" vgap="10">
        <padding>
            <Insets top="25" bottom="25" right="25" left="25"/>
        </padding>

        <HBox spacing="10" alignment="CENTER_LEFT" GridPane.columnIndex="0" GridPane.rowIndex="0"
              GridPane.columnSpan="2">
            <Label text="Depot X Coordinate:"/>
            <TextField fx:id="depotX" promptText="X" text="0"/>

            <Label text="Depot Y Coordinate:"/>
            <TextField fx:id="depotY" promptText="Y" text="0"/>

            <Label text="Vehicle Capacity:"/>
            <TextField fx:id="vehicleCapacity" promptText="100" text="100"/>
        </HBox>

        <TabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE" GridPane.columnIndex="0"
                 GridPane.rowIndex="1" GridPane.rowSpan="2">
            <Tab text="Input">
                <VBox>
                    <TableView fx:id="inputDataTable" editable="true" prefHeight="600">
                        <columns>
                            <TableColumn fx:id="nodeId" text="No."/>
                            <TableColumn text="Coordinates">
                                <columns>
                                    <TableColumn fx:id="nodeX" text="X"/>
                                    <TableColumn fx:id="nodeY" text="Y"/>
                                </columns>
                            </TableColumn>
                            <TableColumn fx:id="nodeDemand" text="Demand"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>

            <Tab text="Results">
                <VBox>
                    <TableView fx:id="resultsTable" prefHeight="600">
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>
                        <columns>
                            <TableColumn fx:id="metDemand" text="Met Demand"/>
                            <TableColumn fx:id="route" text="Route"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>
        </TabPane>

        <StackPane fx:id="stackPane" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.rowSpan="2">
            <padding>
                <Insets topRightBottomLeft="10"/>
            </padding>
            <style>-fx-background-color: rgb(230, 230, 230);</style>
        </StackPane>

        <HBox alignment="CENTER_LEFT" spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="3">
            <Button text="Add new entry" onAction="#addNewEntry"/>
            <Button text="Delete" onAction="#deleteEntry"/>
            <Button text="Delete All" onAction="#deleteAll"/>
        </HBox>

        <HBox alignment="CENTER_RIGHT" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="3">
            <Button text="Route" onAction="#route"/>
        </HBox>
    </GridPane>
</VBox>
